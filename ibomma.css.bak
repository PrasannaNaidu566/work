/*  styles for ibomma application */
body{
	background:#000000;
}
#header{
	background:#191919;
	padding:12px;
	margin-bottom:20px;
	width:5px;
	height:10px;
}

.slogan{
	text-align:center;
	margin-bottom:40px;
	color:#fff;
}
.slogan div{
	font-size:28px;
	font-family:Ebrima
}
.slogan p{
	font-size:16px;
	font-family:Ebrima;
	color:#d6d6d6;
}
.gridbox{
	display:grid;		/*N rows x1 col */
	grid-template-columns: auto auto auto auto;
	width:75%;
	margin:auto;
	row-gap:10px;
	column-gap:10px;	 
}
.gridbox img{
	width:100%;
	height:85%;
	border-radius:15px;
}
.gridbox a{
	text-decoration:none;
	color:#fff;
	font-size:20px;
}
.gridbox a:hover{
	text-decoration:underline;
	color:cyan;
}
.gridbox div div{
	color:yellow;
}